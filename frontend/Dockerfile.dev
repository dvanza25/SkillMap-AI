FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose Vite dev server port
EXPOSE 5173

# Run Vite dev server with HMR enabled
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5173"]
